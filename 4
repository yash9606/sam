<!DOCTYPE html>
<html>
<head>
    <title>Event Listeners Example</title>
</head>
<body>
    <button id="clickButton">Click Me</button>

    <img id="eximg" src="650.jpg" alt="Example Image" width="350"> 
    <script>
        document.getElementById('clickButton').addEventListener('click',function(){
            console.log("Button Clicked!");
        });

        document.getElementById('eximg').addEventListener('mouseover',function(){
            this.style.border='5px solid red';
        });

        document.getElementById('eximg').addEventListener('mouseout',function(){
            this.style.border='none';
        });

        document.addEventListener('keydown',function(event){
            console.log("Key Pressed: "+event.key);
        })
    </script>
</body>
</html>
